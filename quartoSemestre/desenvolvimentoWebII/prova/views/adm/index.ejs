                <% for(artigo of artigos){ %> 
                    <li><a href="/administracao/<%= artigo._id %>/edit"><%= artigo.title %></a></li>
                <% } %> 
            </ul>
            <button onclick="window.location.href='/logout'">Logout</button>
        </div>
        <div class="area3">
            <span><strong>Lucas Alves</strong></span>
        </div>
    </div>
</body>
